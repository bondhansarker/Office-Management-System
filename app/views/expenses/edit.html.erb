<%= javascript_pack_tag :edit_image %>

<h1>Edit Expense Information</h1>

<div>
  <%= form_for(@expense) do |form| %>

      <% if @expense.errors.full_messages.any? %>
          <% @expense.errors.full_messages.each do |error_message| %>
              <p class="alert alert-danger"> <%= error_message if @expense.errors.full_messages.first == error_message %> </p>
          <% break end %>
      <% end %>

      <div class="form-group">
        <%= form.label :product_name, class: "control-label" %>
        <%= form.text_field :product_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :category %>
        <%= form.select(:category, Expense::CATEGORY_LIST) %>
      </div>

      <div class="form-group">
        <%= form.label :cost, class: "control-label" %>
        <%= form.text_field :cost, class: "form-control" %>
      </div>

      <div class="form-group" id="cancel_show">
        <%= image_tag(@expense.image.url,:size => "100x100") if @expense.image.exists? %>
        <%= form.check_box :remove_image, style: "margin-left : 10px; position: absolute;",id: "cancel_image",onclick:"myFunction()" if @expense.image.exists? %>
      </div>

      <div class="form-group">
        <%= form.label :image, 'Image', class: "control-label" %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :details, class: "control-label" %>
        <%= form.text_area :details, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit 'Update', class: "btn btn-success" %> |
        <%= link_to "Back", :back, class: "btn btn-dark" %>
      </div>
  <% end %>
</div>