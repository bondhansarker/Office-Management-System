<div class="card" style="width: 22rem;">
  <%= image_tag(@expense.image.url, :class => "card-img-top") if @expense.image.exists? %>
  <hr>
  <div class="card-body">
    <h4 class="card-title"><b>Employee : </b><%= @expense.user.name %></h4>
    <h4 class="card-title"><b>Product : </b><%= @expense.product_name %></h4>
    <h5 class="card-text"><b>Details : </b><%= @expense.details %></h5>
  </div><hr>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><b>Cost : </b><%= taka(@expense.cost) %> </li>
    <li class="list-group-item"><b>Category : </b><%= @expense.category %></li>
  </ul>
  <div class="card-body">
    <b>Status : </b><%= @expense.status %>
    <% if @expense.approve_time? %>
        <b>Approve Time : </b><%= full_date_with_time(@expense.approve_time) %>
    <% end %>
  </div>
</div>
<br>
<div class="form-group">
  <%= link_to "Back", :back, fallback_location: root_path, class: "btn btn-dark" %>
</div>