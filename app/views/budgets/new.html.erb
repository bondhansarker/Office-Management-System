<h1>Insert Budget Information</h1>
<div style="padding-right:600px; ">
<%=form_for(@budget)  do |form| %>

    <% if @budget.errors.full_messages.any? %>
        <% @budget.errors.full_messages.each do |error_message| %>
            <p class="alert alert-danger"> <%= error_message if @budget.errors.full_messages.first == error_message %> </p>
        <% break end %>
    <% end %>

    <div class="form-group">
      <%= form.label :year, class: "control-label" %>
      <%= form.text_field :year, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :month %>
      <%= form.select(:month, Budget::MONTH_LIST) %>
    </div>

    <div class="form-group">
      <%= form.label :amount, class: "control-label" %>
      <%= form.text_field :amount, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= form.submit 'Submit',class: "btn btn-primary"  %>
    </div>
<% end %>
<%= link_to "Back", budgets_path %>
  </div>