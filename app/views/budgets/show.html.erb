<div class="row">
  <div class="col">
    <div class="card" style="width: 25rem;">
      <div class="card-body">
        <h3 class="card-title">Expense List for <%= @budget.month %></h3>
      </div>
      <hr>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><b>Total Budget : </b><%= taka(@budget.amount) %> </li>
        <li class="list-group-item"><b>Expense : </b><%= taka(@budget.expense) %></li>
        <li class="list-group-item"><b>Remaining : </b><%= taka(@budget.amount- @budget.expense) %></li>
      </ul>
    </div>
  </div>

  <div class="col">
    <%= form_tag(budget_path, :method => "get") do %>
        <div class="row">
          <div class="col-sm-10">
            <%= text_field_tag :search, params[:search], placeholder: "Search by Name or Month", class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-sm-5">
            <%= text_field_tag :from, params[:from], class: "form-control",id: "datepicker", placeholder: "yyyy-mm-yy" %> <br>
          </div>
          <div class="col-sm-5">
            <%= text_field_tag :to, params[:to], class: "form-control",id: "datepicker2" , placeholder: "yyyy-mm-yy"%> <br>
          </div>
        </div>

        <div class="row container">
          <%= submit_tag 'Search', class: "btn btn-dark " %> &nbsp
          <%= link_to 'Reset', budget_path, class: "btn btn-secondary" %>
        </div>
    <% end %>
  </div>
</div>

<br>


<button class="accordion btn btn-warning">Pending (<%= @pending_expenses.count %>)</button>
<%= render partial: 'table', locals: {expenses: @pending_expenses} %>
<br>

<button class="accordion btn btn-success">Approved (<%= @approved_expenses.count %>)</button>
<%= render partial: 'table', locals: {expenses: @approved_expenses} %>
<br>

<button class="accordion btn btn-danger">Rejected (<%= @rejected_expenses.count %>)</button>
<%= render partial: 'table', locals: {expenses: @rejected_expenses} %>


<div class="form-group">
  <br>
  <%= link_to "Back", budgets_path, class: "btn btn-dark" %>
</div>


<%= javascript_pack_tag :accordion %>