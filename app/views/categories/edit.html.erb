<h1>Insert Budget Category</h1>
<div class="col-sm-5">
  <%= form_for(@category) do |budget_category| %>

    <%= render partial: 'layouts/error_message', locals: {object: @category} %>

    <div class="form-group">
      <%= budget_category.label :name, class: "control-label" %>
      <%= budget_category.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= budget_category.submit 'Submit', class: "btn btn-success" %> |
      <%= link_to "Back", categories_path, class: "btn btn-dark" %>
    </div>
  <% end %>
</div>