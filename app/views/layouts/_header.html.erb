<style>

  .btn-info {
    background-color: #a4d6ed;
    border: none;
    color: black;
    text-align: center;
    font-size: 16px;
    margin: 4px 2px;
    transition: 0.4s;
    font-weight: 900;
  }

  .btnclass {
    background-color: #a4d6ed;
    border: none;
    color: black;
    padding: 16px 32px;
    text-align: center;
    font-size: 16px;
    margin: 4px 2px;
    transition: 0.4s;
    font-weight: 900;
  }

  .btn-info:hover, .btnclass:hover {
    background-color: #4ebbed;
    color: black;
    font-weight: 900;
  }
</style>



<nav class="navbar navbar-expand-sm bg-light">
  <ul class="navbar-nav">
    <li class="nav-item">
      <h2 style="font-weight: 900">Office Management System</h2>
    </li>
  </ul>
</nav>
<nav class="navbar navbar-expand-sm bg-light">
  <ul class="navbar-nav">
    <li class="nav-item">
      <%= link_to "User Information", manage_users_path, class: "nav-link btn btnclass" %>
    </li>
    <li class="nav-item">
      <%= link_to "Budget Information", budgets_path, class: "nav-link btn btnclass" %>
    </li>
    <li class="nav-item">
      <%= link_to "Expense Information", expenses_path, class: "nav-link btn btnclass" %>
    </li>
    <li class="nav-item">
      <%= link_to "Leave Information", leaves_path, class: "nav-link btn btnclass" %>
    </li>

    <li style="margin-top: 10px;">
      <% if user_signed_in? %>
          <div style="margin-left: 360px;">
            <div class="dropdown">
              <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <strong><%= current_user.name %></strong>
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to "Edit Profile", edit_manage_user_path(current_user), class: 'dropdown-item' %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
              </div>
            </div>
          </div>
      <% else %>
          <div style="margin-left: 460px;">
            <%= link_to "Signin", new_user_session_path %>
          </div>
      <% end %>
    </li>
  </ul>
</nav>
<br>
<% flash.each do |key, value| %>
    <% if key=="alert" || value=="Access Denied" %>
        <%= content_tag(:div, value, class: "alert alert-danger") %>
    <% elsif key=="notice" %>
        <%= content_tag(:div, value, class: "alert alert-success") %>
    <% end %>
<% end %>