<div class="table-responsive-sm">
  <table class="table table-bordered">
    <tr>
      <th>Employee Name</th>
      <th>Starting Date</th>
      <th>Ending Date</th>
      <th>Leave Type</th>
      <th style="text-align: center;">Action</th>
    </tr>

    <% leaves.each do |leave| %>
      <tr>
        <td>
          <%= leave.user.name %>
        </td>
        <%= render partial: 'leaves/action', locals: {leave: leave} %>
      </tr>
    <% end %>
  </table>
</div>

