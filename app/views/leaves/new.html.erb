<div class="container" style="padding-right: 600px; ">
  <h1>Ask for Leave</h1>
  <%= form_for(@leave) do |l| %>
      <div>
        <%= l.label :start_date, class: 'control-label' %> <br/>
        <%= l.date_field :start_date, class: 'form-control' %>
      </div>
      <br/>
      <div>
        <%= l.label :end_date, class: 'control-label' %> <br/>
        <%= l.date_field :end_date, class: 'form-control' %>
      </div>
      <br/>
      <div>
        <%= l.label :reason, class: 'control-label' %> <br/>
        <%= l.text_area :reason, class: 'form-control' %>
      </div>
      <br/>
      <div>
        <%= l.label :Leave_type %> <br/>
        <%= l.select(:leave_type, Leave::LEAVE_TYPE) %>
      </div>
      <br/>
      <div>
        <%= l.label :user_id %> <br/>
        <%= collection_select(:leave, :user_id, User.all, :id, :name, {}, {:multiple => false}) %>
      </div>
      <br/>
      <div>
        <%= l.submit "Save" %> |
        <%= link_to "Back", root_path %>
      </div>
  <% end %>
</div>