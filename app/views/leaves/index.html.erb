
<% @number = @leave.offset + 1 %>
  <%= link_to "Apply for Leave", new_leafe_path, class: "btn btn-primary" %>

<br/>
<br/>
<div style="width: 40%">
  <%= form_for(leaves_path, :method => "get", class: "form-inline" ) do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Posts", class: "form-control" %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>



<h1>List of Leave</h1>
<table class="table table-bordered">
  <tr>
    <th>Sl</th>
    <th>Employee Name</th>
    <th>Starting Date</th>
    <th>Ending Date</th>
    <th>Leave Type</th>
    <th>Reason of Leave</th>
    <th>Status</th>
    <th style="text-align: center;">Action</th>
  </tr>

  <% @leave.each do |l| %>
      <tr>
        <td><%= @number %> </td>
        <% @number+=1 %>
        <td>
          <%#= raise l.user.name %>
          <%= l.user.name %>
        </td>
        <td>
          <%= l.start_date %>
        </td>
        <td>
          <%= l.end_date %>
        </td>
        <td>
          <%= l.leave_type %>
        </td>
        <td>
          <%= l.reason %>
        </td>
        <td>
          <% if l.status == true %>
              <%= "Approved" %>
          <% else %>
              <%= "Pending" %>
          <% end %>
        </td>
        <td style="text-align: center;">
          <%= link_to "Details", leafe_path(l) %> |
          <%= link_to "Edit", edit_leafe_path(l) %> |
          <%= link_to "Delete", leafe_path(l), method: :delete, data: {confirm: "Confirm Delete??"} %>
        </td>
      </tr>
  <% end %>

</table>
<br/>
<div class="form-group">
  <%= link_to "Back", root_path, class: "btn btn-primary" %>
</div>
<div>
  <%= will_paginate @leave, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>


