<div>

  <%= link_to "Apply for Leafe", new_leafe_path, class: "btn btn-dark", style: "float:right" %>
  <br/>
  <br/>
  <%= form_tag(leaves_path, :method => "get", class: "form-inline") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search by Name", class: "form-control" %> &nbsp
      <%= submit_tag "Search", class: "btn btn-dark" %> &nbsp
      <%= link_to "Reset", leaves_path, class: "btn btn-secondary" %>
  <% end %>
  <br>
  <%= form_tag(leaves_path, :method => "get", class: "form-inline") do %>
      <%= date_field_tag :date_from, params[:date_from], class: "form-control" %> &nbsp
      <%= date_field_tag :date_to, params[:date_to], class: "form-control" %> &nbsp
      <%= submit_tag 'Search', class: 'btn btn-dark' %>&nbsp
      <%= link_to "Reset", leaves_path, class: "btn btn-secondary" %>
<% end %>

  <br>
</div>

<br>
<h1>List of Leave</h1> <br/>
<button class="accordion btn btn-warning">Pending (<%= @leaves_pending.count %>)</button>
<%= render partial: 'table', locals: {leaves: @leaves_pending} %>

<button class="accordion btn btn-success">Approved (<%= @leaves_approved.count %>)</button>
<%= render partial: 'table', locals: {leaves: @leaves_approved} %>

<button class="accordion btn btn-danger">Rejected (<%= @leaves_rejected.count %>)</button>
<%= render partial: 'table', locals: {leaves: @leaves_rejected} %>

<br/>
<div class="form-group">
  <%= link_to "Back", allocated_leaves_path, class: "btn btn-dark" %>
</div>


<%= javascript_pack_tag :accordion %>



