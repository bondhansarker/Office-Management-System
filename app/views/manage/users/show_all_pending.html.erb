<h1>All Pending Resources</h1>


<button class="accordion btn btn-warning" data-toggle="collapse" data-target="#demo">Pending Expenses
  <strong>(<%= @all_pending_expenses.count %>)</strong></button>
<div class="collapse show in" id="demo">
  <%= render partial: 'table', locals: {expenses: @all_pending_expenses} %>
  <div>
    <%= will_paginate @all_pending_expenses, :param_name => 'pending_expenses', renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>
<br>
<br>

