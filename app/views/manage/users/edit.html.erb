<%= javascript_pack_tag :edit_image %>

<h2>Edit User Information</h2>
<div>
  <%= form_for @user, url: manage_user_path(@user) do |f| %>

      <% if @user.errors.full_messages.any? %>
          <% @user.errors.full_messages.each do |error_message| %>
              <p class="alert alert-danger"> <%= error_message if @user.errors.full_messages.first == error_message %> </p>
          <% break end %>
      <% end %>

      <div class="form-group">
        <%= f.label :email, class: "control-label" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, class: "control-label" %>
        <%= f.phone_field :phone, class: "form-control" %>
      </div>

      <div class="form-group" id="cancel_show">
        <%= image_tag(@user.image.url,:size => "100x100") if @user.image.exists? %>
        <%= f.check_box :remove_image, style: "margin-left : 10px; position: absolute;",id: "cancel_image",onclick:"myFunction()" if @user.image.exists? %>
      </div>

      <div class="form-group">
        <%= f.label :image, 'Image', class: "control-label" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <% if current_user.role==User::ADMIN %>
          <div class="form-group">
            <%= f.label :role %>
            <%= f.select(:role, User::ROLE_LIST) %>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.submit 'Update', class: "btn btn-success" %> |
        <%= link_to "Back", manage_users_path, class: "btn btn-primary" %>
      </div>

  <% end %>

</div>

