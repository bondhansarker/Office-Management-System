<h1>Edit</h1>
<h3>User : <%= @allocated_leafe.user.name %> </h3>

<div style="padding-right:600px; ">
  <%= form_for(@allocated_leafe) do |allocated_leafe| %>

    <%= render partial: 'layouts/error_message', locals: {object: @allocated_leafe} %>

    <div class="form-group">
      <%= allocated_leafe.label :year, class: "control-label" %>
      <%= allocated_leafe.select :year, Date.today.year.. 10.years.from_now.year, {}, {:multiple => false, class: "form-control"} %>
    </div>
    <br/>
    <div class="form-group">
      <%= allocated_leafe.label :total_leave, class: "control-label" %>
      <%= allocated_leafe.number_field :total_leave, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= allocated_leafe.submit 'Update', class: "btn btn-success" %> |
      <%= link_to "Back", allocated_leaves_path, class: "btn btn-dark" %>
    </div>
  <% end %>
</div>