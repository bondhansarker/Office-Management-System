<%= link_to "Add Income", new_income_path, class: "btn btn-dark", style: "float:right" %>

<% if current_user.role == User::ADMIN or current_user.role == User::SUPER_ADMIN %>
  <% if params[:search].nil? %>
    <h1>All Income List of <%= Date.today.year %> </h1>
    <% @year = Date.today.year %>
  <% else %>
    <h1>All Income List of <%= params[:search] %> </h1>
    <% @year = params[:search] %>
  <% end %>
<% else %>
  <h1>Your Income List</h1>
<% end %>
<br>
<%= form_tag(incomes_path, :method => "get", class: "form-inline") do %>
  <%= select_tag "search", options_for_select(Date.today.years_ago(10).year.. Date.today.year, :selected => @year), class: "form-control" %>
  &nbsp <%= submit_tag "Search", class: "btn btn-dark" %> &nbsp
  <%= link_to 'Reset', incomes_path, class: "btn btn-secondary" %>  &nbsp
<% end %>
<br>

<button class="accordion btn btn-info" data-toggle="collapse" data-target="#demo">All Incomes</button>
<div class="collapse show in" id="demo">
  <%= render partial: 'table2', locals: {users: @users} %>
</div>
<br>
<br>
<button class="accordion btn btn-info" data-toggle="collapse" data-target="#demo1">All Bonuses</button>
<div class="collapse in" id="demo1">
  <%= render partial: 'table3', locals: {users: @users} %>
</div>

<div class="form-group">
  <br>
  <%= link_to "Back", root_path, class: "btn btn-dark" %>
</div>




