<h1>Edit</h1>
<h3>User : <%= @income.user.name %> </h3>

<div class="col-md-5">
  <%= form_for(@income) do |income| %>

    <% if @income.errors.full_messages.any? %>
      <% @income.errors.full_messages.each do |error_message| %>
        <p class="alert alert-danger"> <%= error_message if @income.errors.full_messages.first == error_message %> </p>
      <% break end %>
    <% end %>

    <div>
      <%= income.label :amount, class: 'control-label' %> <br/>
      <%= income.number_field :amount, class: 'form-control' %>
    </div>
    <br/>
    <div>
      <%= income.label :income_date, class: 'control-label' %> <br/>
      <%= income.text_field :income_date, class: 'form-control', id: "datepicker" , placeholder: "yyyy-mm-yy" %>
    </div>
    <br/>
    <div class="form-group">
      <%= income.label :source, class: "control-label" %> <br/>
      <%= income.select(:source, Income::SOURCE, {}, {class: "form-control"}) %>
    </div>
    <br/>
    <div class="form-group">
      <%= income.submit 'Update', class: "btn btn-success" %> |
      <%= link_to "Back", :back, class: "btn btn-dark" %>
    </div>
  <% end %>
</div>