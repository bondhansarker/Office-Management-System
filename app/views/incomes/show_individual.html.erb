<%= link_to "Add Income", new_income_path, class: "btn btn-dark", style: "float:right" %>


<% if params[:month] %>
    <% if params[:year] %>
        <h1>Income List of <%= @user.name %> of <%= Date::MONTHNAMES[params[:month].to_i] %>, <%= params[:year] %> </h1> <br/>
    <% else %>
        <h1>Income List of <%= @user.name %> of <%= Date::MONTHNAMES[params[:month].to_i] %>, <%= Date.today.year %> </h1> <br/>
    <% end %>
    <% if bonus_amount(params[:month], params[:year], @user) > 0 %>
        <h2>Hurrah!! You are getting <%= taka(bonus_amount(params[:month], params[:year], @user)) %> BONUS!! </h2>
    <% end %>
<% else %>
    <% if params[:year] %>
        <h1>All Income List of <%= @user.name %> of year <%= params[:year] %> </h1> <br/>
    <% else %>
        <h1>All Income List of <%= @user.name %> of year <%= Date.today.year %> </h1> <br/>
    <% end %>
<% end %>

<button class="accordion btn btn-success">Approved (<%= @incomes_approved.count %>)</button>
<%= render partial: 'table', locals: {incomes: @incomes_approved} %>

<button class="accordion btn btn-warning">Pending (<%= @incomes_pending.count %>)</button>
<%= render partial: 'table', locals: {incomes: @incomes_pending} %>

<button class="accordion btn btn-danger">Rejected (<%= @incomes_rejected.count %>)</button>
<%= render partial: 'table', locals: {incomes: @incomes_rejected} %>

<br/>
<div class="form-group">
  <%= link_to "Back", :back, class: "btn btn-dark" %>
</div>


<%= javascript_pack_tag :accordion %>



