<div class="table-responsive-sm">
  <table class="table table-bordered">
    <tr>
      <th>Employee Name</th>
      <th>Income Amount</th>
      <th>Date</th>
      <th>Source</th>
      <th style="text-align: center;">Action</th>
    </tr>

    <% incomes.each do |income| %>
      <tr>
        <td>
          <%= income.user.name %>
        </td>
        <%= render partial: 'incomes/action', locals: {income: income} %>
      </tr>
    <% end %>
  </table>
</div>