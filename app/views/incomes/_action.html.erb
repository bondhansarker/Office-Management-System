<td>
  <%= taka(income.amount) %>
</td>
<td>
  <%= full_date(income.income_date) %>
</td>
<td>
  <%= income.source %>
</td>
<td style="text-align: center;">
  <% if current_user.admin? or current_user.super_admin? %>
    <% if income.approved? %>
      <%= link_to approve_income_path(income), method: :put, data: {confirm: 'Are you sure?'} do %>
        <i class="fa fa-undo" title="Undo"></i>
      <% end %>
      |
      <%= link_to income_path(income) do %>
        <i class="fa fa-eye" title="Show Details"></i>
      <% end %>
    <% elsif income.rejected? %>
      <%= link_to income_path(income) do %>
        <i class="fa fa-eye" title="Show Details"></i>
      <% end %>
      |
      <%= link_to income_path(income), method: :delete, data: {confirm: "Are you sure?"} do %>
        <i class="fa fa-trash" title="Drop"></i>
      <% end %>
    <% else %>
      <%= link_to approve_income_path(income), method: :put, data: {confirm: 'Are you sure to Approve?'} do %>
        <i class="fa fa-check" title="Approve"></i>
      <% end %>
      |
      <%= link_to reject_income_path(income), method: :put, data: {confirm: 'Are you sure to Reject?'} do %>
        <i class="fa fa-ban" title="Reject"></i>
      <% end %>
      |
      <%= link_to income_path(income) do %>
        <i class="fa fa-eye" title="Show Details"></i>
      <% end %>
      <% if income.user == current_user %>
        |
        <%= link_to edit_income_path(income) do %>
          <i class="fa fa-edit" title="Edit"></i>
        <% end %>
        |
        <%= link_to income_path(income), method: :delete, data: {confirm: "Are you sure?"} do %>
          <i class="fa fa-trash" title="Drop"></i>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to "Show", income_path(income) %>
    <% if income.pending? and current_user == income.user %>
      | <%= link_to edit_income_path(income) do %>
        <i class="fa fa-edit" title="Edit"></i>
      <% end %>
      |
      <%= link_to income_path(income), method: :delete, data: {confirm: "Are you sure?"} do %>
        <i class="fa fa-trash" title="Drop"></i>
      <% end %>
    <% end %>
  <% end %>
</td>
